<%= form_for @pessoa, :html => { :class => "form-horizontal" } do |f| %>
  <% if @pessoa.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= pluralize(@pessoa.errors.count, "error") %> prohibited this 
          pessoa from being saved:
        </h3>
      </div>
      <div class="panel-body">
        <ul><% pessoa.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %></ul>
      </div>
    </div>
  <% end %>

      <div class="field">
      <%= f.label :nome, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
                  <%= f.text_field :nome, :class => 'form-control' %>
              </div>
    </div>
      <div class="field">
      <%= f.label :idade, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
                  <%= f.text_field :idade, { :class => 'form-control', :data => {
          'slider-id' => 'idadeSlider', 'slider-min' => '0',
          'slider-max' => '20', 'slider-step' => '1' } } %>
          <script type="text/javascript">$("#pessoa_idade").slider({});</script>
              </div>
    </div>
    <div class="actions">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
