<p id="notice"><%= notice %></p>

<h1>People</h1>

<table data-toggle="table" data-pagination="true" data-search="true" class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= link_to 'Show', person , :class => 'btn btn-default btn-xs'%> <%= link_to 'Edit', edit_person_path(person) , :class => 'btn btn-default btn-xs'%> <%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-default btn-xs btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path , :class => 'btn btn-primary'%>
